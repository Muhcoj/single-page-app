<div class="form">
	<%= form_for @gallery, class: "form-horizontal" do |f| %>

	  <% if @gallery.errors.any? %>
	    <% @gallery.errors.full_messages.each do |error| %>
	      <%= js add_gritter(error, title: "Hhhhhhmmmm..... iets is niet helemaal goed gegaan. Probeer het opnieuw of email me even!", sticky: false) %>
	    <% end %>
	  <% end %>
	  <h1>Wijzig foto</h1>
	  <br>
		<div class="form-group">
			<%= f.label :title, class: "col-sm-2 control-label" %>
			<%= f.text_field :title, class: "form-control" %>
		</div>

		<div class="form-group">
			
			<%= f.file_field :image %>
		</div>

	  <%= f.submit 'Bevestig wijziging', class: "btn btn-tendv " %>

	<%end %>
</div>
